<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        >


        <TextView
            android:id="@+id/ordertitle"
            android:layout_width="match_parent"
            android:background="@color/background"
            android:textColor="@color/software_textColor_unselected"
            android:gravity="center"
            android:layout_height="44dp"
            android:textSize="20dp"
            />
        <LinearLayout
            android:layout_height="wrap_content"
            android:layout_width="match_parent"
            android:background="@color/software_textColor_selected"
            android:orientation="horizontal"
            >
            <TextView
                android:layout_height="wrap_content"
                android:layout_width="wrap_content"
                android:text="订单状态"
                android:padding="20dp"/>

            <Spinner android:id="@+id/Spinner01"
                android:layout_width="70dp"
                android:paddingTop="20dp"
                android:layout_height="wrap_content"></Spinner>
            <TextView
                android:layout_height="wrap_content"
                android:layout_width="wrap_content"
                android:text="产品类型"
                android:padding="20dp"/>
            <Spinner android:id="@+id/Spinner02"
                android:layout_width="70dp"
                android:paddingTop="20dp"
                android:layout_height="wrap_content"
                ></Spinner>
        </LinearLayout>
        <com.handmark.pulltorefresh.library.PullToRefreshListView
            android:id="@+id/pulltorefreshList"
            xmlns:ptr="http://schemas.android.com/apk/res-auto"
            android:layout_weight="1"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            ptr:ptrHeaderBackground="#e9e9e9"
            />
    </LinearLayout>
    <RelativeLayout
        android:id="@+id/orderinfo"
        android:layout_height="match_parent"
        android:layout_width="match_parent"
        android:background="@drawable/orderbackground">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            >
            <TextView
                android:paddingTop="130dp"
                android:id="@+id/orderid"
                android:gravity="center"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="订单号"/>
            <TextView
                android:paddingTop="20dp"
                android:id="@+id/account"
                android:gravity="center"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="充值账号"/>
            <TextView
                android:paddingTop="20dp"
                android:id="@+id/ordermoney"
                android:gravity="center"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="充值金额"/>
            <TextView
                android:paddingTop="20dp"
                android:id="@+id/ordertype"
                android:gravity="center"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="运营商"/>
            <TextView
                android:paddingTop="20dp"
                android:id="@+id/orderidstate"
                android:gravity="center"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="订单状态"/>
            <TextView
                android:paddingTop="20dp"
                android:id="@+id/beginTime"
                android:gravity="center"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="开始时间"/>
            <TextView
                android:paddingTop="20dp"
                android:id="@+id/endTime"
                android:gravity="center"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="结束时间"/>
        </LinearLayout>>
        </RelativeLayout>

</RelativeLayout>
